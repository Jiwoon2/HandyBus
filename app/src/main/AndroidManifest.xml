<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khackathon.handybus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_handybus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_handybus_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.HandyBus">
        <activity android:name="com.khackathon.handybus.activity.BusList" />
        <activity android:name="com.khackathon.handybus.activity.BusInfo" />
        <activity android:name="com.khackathon.handybus.activity.ReserveActivity" >

        </activity>
        <activity android:name="com.khackathon.handybus.activity.StationFromToList" />
        <activity android:name=".activity.wbactivity.PostDetailActivity" />
        <activity android:name=".activity.wbactivity.PostActivity" />
        <activity android:name="com.khackathon.handybus.activity.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.khackathon.handybus.MainActivity">

        </activity>
    </application>

</manifest>