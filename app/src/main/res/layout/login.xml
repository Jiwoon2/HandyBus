<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login.ui.login.LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="195dp"
        android:layout_height="64dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_logo" />

    <EditText
        android:id="@+id/login_PW"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/ic_pw"
        android:drawablePadding="5dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_ID" />

    <EditText
        android:id="@+id/login_ID"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/ic_id"
        android:drawablePadding="5dp"
        android:hint="아이디"
        android:inputType="text"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_login_button"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/purple_button"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_PW" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_signup_button"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_round_button"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_login_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/find_id_pw"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_signup_button" />
</androidx.constraintlayout.widget.ConstraintLayout>