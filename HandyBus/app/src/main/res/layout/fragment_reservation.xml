                                android:onClick="onRadioButtonClicked"/>
                        </RadioGroup> -->


            <ImageButton
                android:id="@+id/num_minus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/minusbtn"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0"
                android:inputType="number"
                android:background="@drawable/reservation_num"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/num_plus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/plusbtn"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="휠체어 소지 여부"
                android:textColor="#A8A8A8"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_nonWheel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해당 없음" />

                <RadioButton
                    android:id="@+id/radio_hasWheel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소지" />
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginRight="5dp"-->
<!--                android:text="도움 요청 사항 "-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="17dp" />-->

            <EditText
                android:id="@+id/et_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="어떤 도움이 필요하신가요?"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/wrtbtn"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#676CFB"
                app:strokeWidth="3dp"
                android:text="예약하기"
                android:textSize="16dp"/>

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="5.5" />-->

    </LinearLayout>


</LinearLayout>