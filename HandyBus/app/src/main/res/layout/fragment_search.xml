<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="busstopviewmodel"
            type="com.khackathon.handybus.ui.search.BusStopViewmodel" />

<!--        <variable-->
<!--            name="serachfragment"-->
<!--            type="com.fourworld.example_mvvm4.ui.search.SearchFragment" />-->
    </data>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.khackathon.bus_mvvm.view.SearchFragment">

<!--    <Button-->
<!--        android:id="@+id/btnn"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="버튼"/>-->

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

<!--        <LinearLayout-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/leftradius"-->
<!--            android:layout_weight="0.5"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/searchradius"
            android:layout_weight="10"
            android:weightSum="7">

            <EditText
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:background="@null"
                android:layout_weight="6"
                android:hint="정류장 검색"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/searchbtn"
                    android:backgroundTint="@color/white"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


<!--        android:onClick="@{serachfragment::onClickSearch}"-->
<!--        <LinearLayout-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/rightradius"-->
<!--            android:layout_weight="0.5"/>-->

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_busStop"/>

</LinearLayout>
</layout>