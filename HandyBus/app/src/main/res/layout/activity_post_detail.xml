        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postdetail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"/>

                <TextView
                    android:id="@+id/postdetail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postdetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"/>

                <TextView
                    android:id="@+id/postdetail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"/>

                <TextView
                    android:id="@+id/postdetail_joinCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여자 수"/>

                <Button
                    android:id="@+id/postdetail_joinBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여하기"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/container_comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/comment_et"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:hint="댓글 내용을 입력하세요"/>
            <Button
                android:id="@+id/comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="등록하기"/>
        </LinearLayout>

